@model IEnumerable<FPTJOB.Models.Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <h1>Index</h1> *@
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Data Table Of Jobs</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-outline-info">Create New</a>
        </p>
            <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Industry)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Requirement)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Deadline)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Industry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Requirement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deadline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-action="Index" asp-controller="Profile_Job" asp-route-id="@item.Id" class="btn btn-labeled btn-success" title="Applied">
                            <span class="btn-label">Applied</span>
                        </a> |
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-labeled btn-success" title="Edit">
                            <span class="btn-label"><i class="fa fa-edit"></i></span>
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-labeled btn-danger" title="Delete">
                            <span class="btn-label"><i class="fa fa-trash"></i></span>
                        </a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>